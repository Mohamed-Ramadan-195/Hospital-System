<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="fragment_address" >
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="regular" >
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="fontFamily">@font/poppins_regular</item>
    </style>
    
    <style name="regular.button" >
        <item name="backgroundTint">@color/primary_color</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="cornerRadius">@dimen/_5sdp</item>
    </style>
    
    <style name="regular.name" >
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="position">
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textColor">@color/primary_color</item>
        <item name="fontFamily">@font/poppins_regular</item>
    </style>

    <style name="details" >
        <item name="android:textSize">@dimen/_11ssp</item>
    </style>

    <style name="details.title" >
        <item name="fontFamily">@font/poppins_semi_bold</item>
        <item name="android:textColor">@color/grey_details</item>
    </style>

    <style name="details.body" >
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/black_details</item>
    </style>

</resources>